### hooks/env

SOURCE_BRANCH=${SOURCE_BRANCH:-$1}
DOCKER_TAG=${DOCKER_TAG:-$1}
DOCKERFILE_PATH=${DOCKERFILE_PATH:-./Dockerfile.inkscape}
DOCKER_REPO=${DOCKER_REPO:-accetto/xubuntu-vnc-inkscape}

TODAY=$(date +%Y-%m-%d)
BASEIMAGE=""
BASETAG=""

VERSION_STICKER="ubuntu18.04.3-inkscape0.92.3"
VERSION_STICKER_FIREFOX="ubuntu18.04.3-inkscape0.92.3-firefox69.0.1"

case "$DOCKER_TAG" in

    latest)
        BASEIMAGE="accetto/xubuntu-vnc"
        BASETAG="latest"
        ;;

    firefox)
        BASEIMAGE="accetto/xubuntu-vnc-firefox"
        BASETAG="latest"
        VERSION_STICKER="$VERSION_STICKER_FIREFOX"
        ;;

    dev)
        BASEIMAGE="accetto/xubuntu-vnc"
        BASETAG="dev"
        ;;

    dev-firefox)
        BASEIMAGE="accetto/xubuntu-vnc-firefox"
        BASETAG="dev"
        VERSION_STICKER="$VERSION_STICKER_FIREFOX"
        ;;

    dfw)
        BASEIMAGE="accetto/xubuntu-vnc"
        BASETAG="dfw"
        ;;

    dfw-firefox)
        BASEIMAGE="accetto/xubuntu-vnc-firefox"
        BASETAG="dfw"
        VERSION_STICKER="$VERSION_STICKER_FIREFOX"
        ;;

    *)
        BASETAG=""
        ;;
esac